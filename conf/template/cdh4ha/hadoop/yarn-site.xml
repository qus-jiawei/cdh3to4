<?xml version="1.0"?>
<configuration xmlns:xi="http://www.w3.org/2001/XInclude">

    <xi:include href="yarn-site.private.xml"/>

    <property>
        <name>yarn.app.mapreduce.am.staging-dir</name>
        <value>/user</value>
    </property>

    <property>
        <name>yarn.resourcemanager.address</name>
        <value>cnode507.uc.local:50040</value>
    </property>

    <property>
        <name>yarn.resourcemanager.scheduler.address</name>
        <value>cnode507.uc.local:50030</value>
    </property>

    <property>
        <name>yarn.resourcemanager.webapp.address</name>
        <value>cnode507.uc.local:50088</value>
    </property>

    <property>
        <name>yarn.resourcemanager.resource-tracker.address</name>
        <value>cnode507.uc.local:50025</value>
    </property>

    <property>
        <name>yarn.resourcemanager.admin.address</name>
        <value>cnode507.uc.local:50141</value>
    </property>

    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce.shuffle</value>
    </property> 

    <property>
        <name>yarn.log-aggregation-enable</name>
        <value>true</value>
    </property> 

    <property>
        <description>hdfs path</description>
        <name>yarn.nodemanager.remote-app-log-dir</name>
        <value>/var/log/hadoop-yarn</value>
    </property>

    <property>
        <name>yarn.nodemanager.localizer.address</name>
        <value>0.0.0.0:50840</value>
    </property>

    <property>
        <name>yarn.nodemanager.address</name>
        <value>0.0.0.0:50841</value>
    </property>

    <property>
        <name>yarn.nodemanager.webapp.address</name>
        <value>0.0.0.0:50842</value>
    </property>

    <!-- mem scheduler -->
    <property>
        <name>yarn.nodemanager.vmem-pmem-ratio</name>
        <value>4.1</value>
    </property>

    <property>
        <name>yarn.resourcemanager.scheduler.class</name>
        <value>org.apache.hadoop.yarn.server.resourcemanager.scheduler.fair.FairScheduler</value>
    </property>

    <property>
        <name>yarn.scheduler.minimum-allocation-mb</name>
        <value>512</value>
    </property>

    <property>
        <name>yarn.scheduler.maximum-allocation-mb</name>
        <value>4096</value>
    </property>

    <property>
        <name>yarn.resourcemanager.nodes.include-path</name>
        <value>yarn.include</value>
    </property>
    
    <property>
        <name>yarn.resourcemanager.nodes.exclude-path</name>
        <value>yarn.exclude</value>
    </property>

</configuration>
